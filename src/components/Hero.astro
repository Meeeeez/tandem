---
import Button from './Button.astro';
import Social from './Social.astro';
---

<div
  class="relative bg-hero-image bg-no-repeat bg-cover bg-[position:45%_0%] sm:bg-[position:0%_80%] rounded-xl overflow-hidden"
  style="box-shadow: inset 0 72px 70px 0 rgba(0, 0, 0, 0.5);"
>
  <!-- background -->
  <div class="absolute inset-0 flex items-center justify-center h-full">
    <div class="flex justify-around h-full w-full">
      <div class="bg-white opacity-10 w-0.5 h-full"></div>
      <div class="bg-white opacity-10 w-0.5 h-full"></div>
      <div class="bg-white opacity-10 w-0.5 h-full"></div>
    </div>
  </div>

  <!-- nav -->
  <div
    class="absolute top-0 left-0 right-0 z-10 flex items-center justify-between px-10 py-4"
  >
    <!-- logo -->
    <a href="/" class="flex">
      <span class="text-lg text-gray-100 font-medium">Plose</span>
      <span class="text-lg text-primary font-black">FLY</span>
    </a>

    <!-- nav links -->
    <div class="flex gap-10">
      <a href="#about" class="text-gray-100 text-sm font-light hover:underline"
        >About Us</a
      >
      <a
        href="#experiences"
        class="text-gray-100 text-sm font-light hover:underline">Experiences</a
      >
      <a href="#faq" class="text-gray-100 text-sm font-light hover:underline"
        >FAQ</a
      >
      <a
        href="#reviews"
        class="text-gray-100 text-sm font-light hover:underline">Reviews</a
      >
    </div>

    <!-- social media links -->
    <Social color="#fff" />
  </div>

  <div class="flex flex-col items-start px-10 py-4 z-10">
    <h1
      class="font-display max-w-lg text-3xl font-semibold text-gray-100 sm:text-6xl mt-64"
    >
      JOIN US ON AN <span class="text-primary">UNFORGETTABLE</span> JOURNEY ABOVE
      THE CLOUDS!
    </h1>

    <!-- <Button class="flex items-center z-10 mb-5 mt-10 gap-3">See prices</Button> -->

    <p
      class="text-md font-light text-gray-100 tracking-tight leading-tight mt-16"
    >
      With our expert pilots,<br />youâ€™re in safe hands for a truly amazing
      experience.
    </p>
    <p
      class="self-end mt-10 mb-5 text-gray-100 text-sm font-extralight opacity-75"
    >
      A sunset flight from Plose some time ago
    </p>
  </div>
</div>
