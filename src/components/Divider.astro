---
const { wide, orientation, color } = Astro.props;
---

{
  orientation === 'vertical' ? (
    <div
      class="h-full w-[1px] bg-slate-200"
      style={{ backgroundColor: color }}
    />
  ) : orientation === 'horizontal' && wide ? (
    <div
      class="w-[calc(100%+2rem)] h-[1px] bg-slate-200 -mx-4"
      style={{ backgroundColor: color }}
    />
  ) : orientation === 'horizontal' ? (
    <div class="h-[1px] bg-slate-200" style={{ backgroundColor: color }} />
  ) : null
}
